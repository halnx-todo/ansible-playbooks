acl internal {
        192.168.56.0/24;
        localhost;
        localnets;
};

options {
        directory "/var/cache/bind";
        dnssec-validation no;
        recursion yes;
        allow-query { internal; };
        allow-recursion { 127.0.0.1; 192.168.56.0/24; 10.0.2.0/24; };
        forwarders {
            8.8.8.8;
            8.8.4.4;
        };
        querylog yes;
};
